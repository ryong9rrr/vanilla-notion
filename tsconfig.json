{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "downlevelIteration": false,
    "incremental": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "**/*.css"],
  "include": ["src"]
}
